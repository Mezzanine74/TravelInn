
@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "GridViewFirmaTemsilcileri";
        settings.CallbackRouteValues = new { Controller = "FirmaTemsilcileri", Action = "GridViewFirmaTemsilcileriPartial" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "FirmaTemsilcileri", Action = "GridViewFirmaTemsilcileriPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "FirmaTemsilcileri", Action = "GridViewFirmaTemsilcileriPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "FirmaTemsilcileri", Action = "GridViewFirmaTemsilcileriPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditForm;

        settings.ClientSideEvents.BeginCallback = "function(s,e){onGrdFirmaTemsilcileriBeginCallback(s,e);}";
        settings.ClientSideEvents.EndCallback = "function(s,e){onGrdFirmaTemsilcileriEndCallback(s,e);}";
        settings.ClientSideEvents.RowDblClick = "function(s,e){ onShowLog(s,e) }";

        settings.CommandColumn.Width = 150;

        settings.Width = System.Web.UI.WebControls.Unit.Pixel(650);

        settings.Columns.Add(col =>
        {
            col.FieldName = "AdiSoyadi";
            col.CellStyle.Wrap = DefaultBoolean.True;
            col.Width = System.Web.UI.WebControls.Unit.Pixel(250);
        });

        settings.Columns.Add(col =>
        {
            col.FieldName = "Telefon";
            col.CellStyle.Wrap = DefaultBoolean.True;
            col.Width = System.Web.UI.WebControls.Unit.Pixel(100);
        });

        settings.Columns.Add(col =>
        {
            col.FieldName = "Email";
            col.CellStyle.Wrap = DefaultBoolean.True;
            col.Width = System.Web.UI.WebControls.Unit.Pixel(100);
        });

        // Common settings
        TravelInn.MVC.DevExpressWeb.Responsive.HelperClasses.DevExpressGridCommonSettings.Set(settings);

    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()
