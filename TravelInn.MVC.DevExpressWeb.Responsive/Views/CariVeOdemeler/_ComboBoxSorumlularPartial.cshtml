@Html.DevExpress().ComboBox(settings => {
    settings.Name = "comboBoxSorumlularSearch";
    //settings.Width = 180;
    //settings.SelectedIndex = 0;
    settings.CallbackRouteValues = new { Controller = "CariVeOdemeler", Action = "ComboBoxSorumlularPartial" };
    settings.Properties.CallbackPageSize = 1000;
    settings.Properties.TextField = "Sorumlu";
    settings.Properties.ValueField = "FirmaId";
    settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;
    settings.Properties.DropDownHeight = Unit.Pixel(450);

    settings.Properties.Columns.Add("Sorumlu", "Sorumlu", 100);
    settings.Properties.Columns.Add("FirmaAdi", "Firma Adi", 130);
    settings.Properties.Columns.Add("Aciklama", "Aciklama", 250);

    settings.Properties.ClientSideEvents.ValueChanged = "function(s,e){ if(s.GetValue()){location.href = '/CariVeOdemeler/?frmId=' + s.GetValue()};}";
    settings.Properties.ClientSideEvents.Init = "function(s,e){ comboSorumlularSearchSelectFromUrl(s,e) }";

}).BindList(Model).GetHtml()
