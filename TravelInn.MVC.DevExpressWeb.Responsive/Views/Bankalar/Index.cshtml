
@{
    ViewBag.Title = "Bankalar";
}

<style type="text/css">
    /*BUNLARI SONRA CUSTOM CSS E AL*/
    .marginTop5px {
        margin-top: 5px;
    }

    .dxgvHeader_Metropolis {
        background-color: #f0f0f0;
    }
</style>

<script>

    var onRowDblClick = function(s, e) {

        s.GetRowValues(
            e.visibleIndex,
            "Uniqueidentifier",
            function (value) {
                PopupLog.Show();
                GridViewLog.PerformCallback({ uniqeIdentifier: value });
            });
    }

    // Update with Enter .........................

    var prevOnLoad = window.onload;
    window.onload = myOnLoad;
    function myOnLoad() {
        if (prevOnLoad != null)
            prevOnLoad();
        document.onkeydown = myOnKeyDown;
    }
    function myOnKeyDown() {
        if (event.keyCode == 27)
            GridViewBankalar.CancelEdit();
        if (event.keyCode == 13)
            GridViewBankalar.UpdateEdit();
    }
    // ......................... Update with Enter

</script>

@Html.Action("GridViewPartialBankalar")

@Html.DevExpress().Button(s =>
{
    s.Name = "AddBanka";
    s.Text = "+";
    s.ControlStyle.CssClass = "rndBtn marginTop5px";
    s.Width = 25;
    s.ClientSideEvents.Click = "function(s, e){GridViewBankalar.AddNewRow()}";
}).GetHtml()

@Html.DevExpress().PopupControl(
    settings =>
    {
        settings.Name = "PopupLog";

        settings.PopupHorizontalAlign = PopupHorizontalAlign.WindowCenter;
        settings.PopupVerticalAlign = PopupVerticalAlign.WindowCenter;
        settings.HeaderText = "Logs";
        settings.Modal = true;

        settings.SetContent(() =>
        {
            Html.RenderAction("GridViewPartialLog","Log");
        });
    }).GetHtml()

